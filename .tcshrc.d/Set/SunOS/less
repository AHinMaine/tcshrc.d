set _LESSBIN = ( `which less` ) >& /dev/null
if ( $? != 0 || ! -x "${_LESSBIN}" ) unset _LESSBIN

if ( $?_LESSBIN ) then
    setenv PAGER $_LESSBIN
    setenv LESS '-iwX -P[?pB%pB\% of .?f%f:STDIN.]?lB line %lb.?L of %L.?B (%B bytes). (EDITOR\:?E%E:default). > '
endif

if ( $?_LESSBIN ) unset _LESSBIN
